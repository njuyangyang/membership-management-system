<html>
  <head>
      <style>
           fieldset {
           border: 4px solid lightblue;
           width: 1140px;          
           }
    </style>
  </head>
  
  
<body>
<p id="notice"><%= notice %></p>
<fieldset>
<h1>Listing Dynasties</h1>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dynasties.each do |dynasty| %>
      <tr>
        <td><%= dynasty.name %></td>
        <td><%= link_to 'Show', dynasty %></td>
        <td><%= link_to 'Edit', edit_dynasty_path(dynasty) %></td>
        <td><%= link_to 'Destroy', dynasty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</fieldset>

<br>

<p class="btn btn-default" role="button"><%= link_to 'New Dynasty', new_dynasty_path %></p>
<p class="btn btn-default" role="button"><%= link_to "Back to Dashborad", static_pages_adminhome_path %></p>
