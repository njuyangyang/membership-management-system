 <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active">
            <%= image_tag("p1.png") %>          
            <div class="container">
            <div class="carousel-caption">
              <h1>Welcome to CSA</h1>
              <p>Have you been a member of us?</p>
              <p><a class="btn btn-lg btn-primary" href="/users/new" role="button">Join us today &raquo;</a></p>
            </div>
          </div>
        </div>
        <div class="item">
          <%= image_tag("p2.png") %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Register for Big Event 2016</h1>
              <p>Note: Register today for Big Event on April 14 to help the elderly clean and decorate their house!</p>
              <p><a class="btn btn-lg btn-primary" href="#" role="button">Learn more &raquo;</a></p>
            </div>
          </div>
        </div>
        <div class="item">
          <%= image_tag("p3.jpg") %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Let's get moving!</h1>
              <p>Note: We are intended to have a sports club for our community. If you are interested in it, do not hesitate to join us!</p>
              <p><a class="btn btn-lg btn-primary" href="#" role="button">Register now &raquo;</a></p>
            </div>
          </div>
        </div>
        <div class="item">
          <%= image_tag("P4.jpg") %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Improve your academic performance!</h1>
              <p>We are now having students from different majors, different grades. We have a project for graduates to help lower-grade students to achieve a better grades.</p>
              <p><a class="btn btn-lg btn-primary" href="#" role="button">Register Now &raquo;</a></p>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> 
        <span class="sr-only">Previous</span> 
      </a> 
       
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"> 
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> 
        <span class="sr-only">Next</span>  
      </a>  
    </div>  <!-- /.carousel -->


