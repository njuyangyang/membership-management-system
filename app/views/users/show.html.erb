<h3 class="sub-header">Event</h3>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Semester</th>
      <th>Category</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.year %></td>
        <td><%= event.semester %></td>
        <td><%= event.category %></td>
        <td><%= event.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Edit', edit_user_path(@user) %> |
<% if params[:checkin] %>
<%= link_to 'Back', event_path(@event) %>|
<% else %>
<%= link_to 'Back', users_path(:search => "search") %>|
<% end %>
<%= link_to "Log out", static_pages_logout_path, method: "delete" %>
